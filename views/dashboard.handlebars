{{!-- create new blog --}}
<div class="blog-display">
    <div class="b-header">
        <h2>Create New Blog</h2>
    </div>
    <div class="b-content">
        <form class="new-blog-form">
            <label for="title">Title</label><br>
            <input type="text" id="b-title" name="b-title"><br><br>
            <label for="content">Content</label><br>
            <textarea type="text" id="bb-content" name="bb-content"></textarea><br><br>
            <button type="submit" id="n-blog">+ New Blog</button>
        </form>
        <br>
    </div>
</div>

<script src="/javascript/add-post.js"></script>

{{!-- display existing blog --}}
{{#if userBlog.length}}
    {{#each userBlog as |blog|}}
        <div id="saved-b">
            <h3><a href="/blog/{{blog.id}}">{{blog.blog_title}}</a></h3>
            <p>Blog posted on {{blog.date}}</p>
        </div>
    {{/each}}
{{/if}}


 