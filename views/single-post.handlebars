{{!-- display a single blog --}}
<div class="blog-display">
    <div class="b-header">
        <h2>{{blog.blog_title}}</h2>
        <p>Blog posted by {{blog.user.username}} on {{blog.date}}</p>
    </div>
    <div class="b-content">
        <p>{{blog.blog_text}}</p>
        <br>
        <p>Comment<p>
        {{!-- <textarea type="text" id="comment" name="bb-content"></textarea><br>
        <button type="button" id="submit-comment">Sumbit Comment</button><br><br> --}}
        <form class="comment-form">
            <div>
                <textarea name="comment-body"></textarea>
            </div>

            <div>
                <button type="submit">add comment</button>
                <button type="button" class="upvote-btn">upvote</button>
            </div>
        </form>
    </div>
</div>

{{!-- display comments --}}
<div class="comments-list">
  {{#each blog.comments}}
  <div class="comment-single">
    <div class="meta">
      Michaelangelo on {{date}} {{!-- {{comments.user}} --}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
    <br>
  </div>
  {{/each}}
</div>
